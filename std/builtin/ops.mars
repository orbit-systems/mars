// comparison

interface Eq(Rhs: type) {
    fun eq(^self, rhs: Rhs): bool;

    fun ne(^self, rhs: Rhs): bool {
        !(self as Eq).eq()
    }
}

// conversion

interface As(T: type) {
    fun op(self): T;
}

// miscellaneous

interface Index(Index: type) {
    def Result: type;
    fun op(^self, idx: Index): ^Result;
}

interface Deref {
    def Result: type;
    fun op(^self): ^Result;
}

