// arithmetic

interface Add(Rhs: type) {
    def Result: type;
    fun op(self, rhs: Rhs): Result;
}

interface AssignAdd(Rhs: type) {
    fun op(^self, rhs: Rhs);
}

interface Sub(Rhs: type) {
    def Result: type;
    fun op(self, rhs: Rhs): Result;
}

interface AssignSub(Rhs: type) {
    fun op(^self, rhs: Rhs);
}

interface Neg {
    def Result: type;
    fun op(self): Result;
}

